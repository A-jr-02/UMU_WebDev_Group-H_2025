<html lang="en"><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
  
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pearl Chef's Touch Inc | Fine Dining - Kololo, Kampala</title>
  <meta name="description" content="Premium dining experience at Plot 28, Acacia Avenue, Kololo. Book your table today.">

  <!-- Google Fonts -->
  <link href="./restaurant hero_files/css2" rel="stylesheet">
  <link rel="stylesheet" href="./restaurant hero_files/all.min.css">

  <style>
    :root {
      --gold: #c49b63;
      --dark: #0f0f0f;
      --light: #faf9f7;
      --gray: #555;
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Open Sans', sans-serif; line-height: 1.7; color: var(--dark); background: var(--light); }
    h1, h2, h3 { font-family: 'Playfair Display', serif; }

    header { background: rgba(15,15,15,0.97); position: fixed; width: 100%; top: 0; z-index: 1000; padding: 1.5rem 0; transition: all 0.4s; }
    header.scrolled { padding: 1rem 0; box-shadow: 0 10px 30px rgba(0,0,0,0.2); }
    .container { width: min(90%, 1300px); margin: 0 auto; padding: 0 20px; }
    nav { display: flex; justify-content: space-between; align-items: center; }
    .logo { font-size: 2.2rem; font-weight: 700; color: var(--gold); text-decoration: none; }
    .nav-links a { color: white; text-decoration: none; margin: 0 1.5rem; font-weight: 600; position: relative; }
    .nav-links a:hover, .nav-links a.active { color: var(--gold); }
    .nav-links a::after { content: ''; position: absolute; width: 0; height: 2px; bottom: -8px; left: 0; background: var(--gold); transition: width 0.3s; }
    .nav-links a:hover::after { width: 100%; }
    .mobile-menu { display: none; font-size: 1.8rem; color: white; cursor: pointer; }

    .hero {
      height: 90vh; min-height: 600px; background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)),
                  url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2370&q=90') center/cover no-repeat;
      display: flex; align-items: center; justify-content: center; text-align: center; color: white; margin-top: 90px;
    }
    .hero h1 { font-size: clamp(3rem, 8vw, 6rem); letter-spacing: 3px; }
    .hero p { font-size: 1.4rem; max-width: 700px; margin: 1rem auto 0; }

    .section { padding: 120px 0; }
    .section-title { text-align: center; font-size: 3rem; margin-bottom: 4rem; position: relative; }
    .section-title::after { content: ''; width: 100px; height: 3px; background: var(--gold); position: absolute; bottom: -15px; left: 50%; transform: translateX(-50%); }

    .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 80px; align-items: start; }
    .card { background: white; padding: 3rem; border-radius: 12px; box-shadow: 0 15px 40px rgba(0,0,0,0.08); }
    .info-item { display: flex; margin-bottom: 2rem; }
    .info-item i { font-size: 2rem; color: var(--gold); margin-right: 1.5rem; min-width: 50px; }
    .hours-table td { padding: 0.8rem 0; border-bottom: 1px solid #eee; }

    input, select, textarea {
      width: 100%; padding: 16px; margin: 10px 0; border: 1px solid #ddd; border-radius: 8px; font-family: inherit;
    }
    input:focus, select:focus, textarea:focus { outline: none; border-color: var(--gold); box-shadow: 0 0 0 4px rgba(196,155,99,0.15); }
    .btn { background: var(--gold); color: white; padding: 18px 40px; border: none; border-radius: 8px; font-size: 1.2rem; cursor: pointer; width: 100%; transition: all 0.4s; }
    .btn:hover { background: #b58950; transform: translateY(-3px); }

    .error { color: #e74c3c; font-size: 0.9rem; margin-top: 5px; display: none; }
    .map-wrapper { margin-top: 100px; border-radius: 16px; overflow: hidden; box-shadow: 0 20px 60px rgba(0,0,0,0.15); }

    footer { background: var(--dark); color: #ccc; padding: 100px 0 40px; }
    .footer-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 3rem; margin-bottom: 3rem; }
    .footer-col h3 { color: var(--gold); margin-bottom: 1.5rem; }
    .copyright { text-align: center; padding-top: 2rem; border-top: 1px solid #333; font-size: 0.95rem; color: #777; }

    @media (max-width: 992px) {
      .grid { grid-template-columns: 1fr; }
      .nav-links { position: fixed; top: 90px; left: -100%; width: 100%; height: 100vh; background: var(--dark); flex-direction: column; padding-top: 5rem; transition: 0.5s; }
      .nav-links.active { left: 0; }
      .mobile-menu { display: block; }
    }
  </style>
</head>
<body>

  <!-- Navigation -->
  <header id="header">
    <div class="container">
      <nav>
        <a href="file:///C:/Users/CUTHEBERT/Desktop/web-development2/examweb.html#" class="logo">Pearl Chef's Touch</a>
        <div class="nav-links" id="navLinks">
          <a href="file:///C:/Users/CUTHEBERT/Desktop/web-development2/examweb.html#" class="active">Home</a>
          <a href="file:///C:/Users/CUTHEBERT/Desktop/web-development2/examweb.html#">Menu</a>
          <a href="file:///C:/Users/CUTHEBERT/Desktop/web-development2/examweb.html#">About</a>
          <a href="file:///C:/Users/CUTHEBERT/Desktop/web-development2/examweb.html#">Reservations</a>
        </div>
        <div class="mobile-menu" id="mobileMenu"><i class="fas fa-bars"></i></div>
      </nav>
    </div>
  </header>

  <!-- Hero -->
  <section class="hero">
    <div class="container">
      <h1>Pearl Chef's Touch Inc</h1>
      <p>Exquisite dining on Acacia Avenue, Kololo — Where flavor meets elegance</p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Reserve Your Table</h2>
      <div class="grid">

        <!-- Contact Info -->
        <div class="card">
          <h2>We Can't Wait to Host You</h2>
          <div class="info-item">
            <i class="fas fa-map-marker-alt"></i>
            <div>
              <h3>Our Location</h3>
              <p><strong>Pearl Chef's Touch Inc</strong><br>
                 Plot 28, Acacia Avenue<br>
                 Kololo, Kampala<br>
                 Uganda</p>
            </div>
          </div>
          <div class="info-item">
            <i class="fas fa-phone"></i>
            <div><h3>Phone</h3><p>+256 700 000 000</p></div>
          </div>
          <div class="info-item">
            <i class="fas fa-clock"></i>
            <div>
              <h3>Opening Hours</h3>
              <table class="hours-table">
                <tbody><tr><td>Mon–Thu</td><td>11:30 AM – 10:00 PM</td></tr>
                <tr><td>Fri–Sat</td><td>11:30 AM – 11:00 PM</td></tr>
                <tr><td>Sunday</td><td>11:00 AM – 9:00 PM</td></tr>
              </tbody></table>
            </div>
          </div>
        </div>

        <!-- Reservation Form -->
        <div class="card">
          <h2>Book a Table</h2>
          <form id="reservationForm" novalidate="">
            <input type="text" id="resName" placeholder="Full Name" required="">
            <span class="error" id="nameError"></span>

            <input type="email" id="resEmail" placeholder="Email Address" required="">
            <span class="error" id="emailError"></span>

            <input type="tel" id="resPhone" placeholder="Phone Number" required="">
            <span class="error" id="phoneError"></span>

            <input type="date" id="resDate" required="">
            <span class="error" id="dateError"></span>

            <select id="resTime" required="">
              <option value="">Select Time</option>
              <option>6:00 PM</option><option>6:30 PM</option><option>7:00 PM</option>
              <option>7:30 PM</option><option>8:00 PM</option><option>8:30 PM</option>
            </select>

            <select id="resGuests" required="">
              <option value="">Number of Guests</option>
              <option>1</option><option>2</option><option>3</option><option>4</option>
              <option>5</option><option>6</option><option>7+</option>
            </select>

            <button type="submit" class="btn">Confirm Reservation</button>
          </form>
        </div>
      </div>

      <!-- Google Maps - Correctly pinned on Acacia Avenue, Kololo -->
      <div class="map-wrapper">
        <iframe src="./restaurant hero_files/embed.html" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
      </div>
    </div>
  </section>

  <!-- Footer with Legal Info -->
  <footer>
    <div class="container">
      <div class="footer-grid">
        <div class="footer-col">
          <h3>Pearl Chef's Touch Inc</h3>
          <p>Authentic fine dining in the heart of Kololo since 2025.</p>
        </div>
        <div class="footer-col">
          <h3>Contact</h3>
          <p>Plot 28, Acacia Avenue, Kololo, Kampala<br>+256 700 000 000<br>info@pearlchefstouch.ug</p>
        </div>
      </div>
      <div class="copyright">
        <p>© 2025 Pearl Chef's Touch Inc. All rights reserved.<br>
           <strong>Registered Name:</strong> Pearl Chef's Touch Inc<br>
           <strong>TIN:</strong> 1012345678 | <strong>URSB Reg No:</strong> C-987654</p>
      </div>
    </div>
  </footer>

  <!-- JavaScript (Form Validation + Mobile Menu) -->
  <script>
    // Mobile menu
    document.getElementById('mobileMenu').addEventListener('click', () => {
      document.getElementById('navLinks').classList.toggle('active');
    });

    // Form validation
    const form = document.getElementById('reservationForm');
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      document.querySelectorAll('.error').forEach(el => el.style.display = 'none');

      let valid = true;
      const name = document.getElementById('resName').value.trim();
      const email = document.getElementById('resEmail').value.trim();
      const phone = document.getElementById('resPhone').value.trim();
      const date = document.getElementById('resDate').value;
      const time = document.getElementById('resTime').value;
      const guests = document.getElementById('resGuests').value;

      if (!name) { document.getElementById('nameError').textContent = 'Name required'; document.getElementById('nameError').style.display = 'block'; valid = false; }
      if (!email || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) { document.getElementById('emailError').textContent = 'Valid email required'; document.getElementById('emailError').style.display = 'block'; valid = false; }
      if (!phone) { document.getElementById('phoneError').textContent = 'Phone required'; document.getElementById('phoneError').style.display = 'block'; valid = false; }
      if (!date) { document.getElementById('dateError').textContent = 'Select date'; document.getElementById('dateError').style.display = 'block'; valid = false; }

      if (valid) {
        alert(Thank you, ${name.split(' ')[0]}!\nYour table for ${guests} on ${new Date(date).toLocaleDateString()} at ${time} is confirmed.\nSee you at Pearl Chef's Touch Inc.');
        form.reset();
      }
    });
  </script>

</body></html>